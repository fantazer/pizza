//! block inside
.section-wraper--inside
	padding-top 200px
//! block inside
.inside-wraper
	margin-top 50px
.inside-el
	flex(between)
	align-items flex-start
	margin-bottom 30px
.inside-media
	width 57%
	position relative
	height 400px
.inside-media__btn
	position absolute
	z-index 200
	font-size 22px
	padding 10px 15px
	color white
	background green
	font-family MyriadProCondensed
	up()
	cp()
//.inside-slider
.inside-slider__el
	width 100%
	height 400px
	background-size cover
	background-repeat no-repeat
	background-position center center
.inside-content
	width 40%
	margin-left 3%
.inside-title
	+below(1200px)
		font-size 22px
	font-size 24px
	font-family  Myriad  Pro
	font-weight 400
.inside-title__sub
	+below(1200px)
		font-size 22px
	font-size 24px
	font-family  Myriad  Pro
	font-weight 400
	margin-bottom 40px 
.inside-info__row
	f()
	align-items center
	margin-bottom 10px
.inside-icon
	flex(mid)
	font-size 26px
	margin-right 20px
.inside-info__val
	+below(1200px)
		flex(between)
	font-family MyriadProCondensed
	font-size 22px
	flex(mid)
	fw()
	span
		+below(1200px)
			width 45%
			font-size 16px
			text-align left
		width 33%
.inside-get
	flex(between)
	fw()
	margin-top 20px
.inside-get__adv
	+below(1200px)
		width 100%
		margin-bottom 20px
	flex(between)
	fw()
	width 48%
	padding 20px
	border 1px solid black
	.inside-info__row
		width 50%
	.inside-info__val
		font-size 18px
.inside-info__row--card
	width 100%!important

.inside-interactive
	background grey 
	height 400px
	margin-bottom 20px
.inside-control
	flex(between)
	background dark 
.inside-control__el
	+below(978px)
		font-size 18px
	.icon
		transform rotate(-90deg)
		margin-right 20px
	flex(mid)
	up()
	text-align center
	width 33%
	color white
	padding 10px 0
	font-size 22px
	&:last-child
		background green

.persons 
	margin-top 150px
.persons__wrap 
	flex(between)
	align-items flex-start
.persons__el 
	width 19%
	flex(mid)
	fl()
	fw()
.persons__img 
	+below(978px)
		size 100 100
	round()
	size 140 140
	background-size cover
.persons__name 
	margin-top 10px
	span
		+below(978px)
			font-size 16px
		up()
		font-size 22px
		display block
		text-align center
.persons__el--add
	.persons__img
		+below(978px)
			size 100 100
		round()
		flex(mid)
		tr(all)
		size 140 140
		background green
		&:hover
			background darken(green,10)
		span
			color white
			font-size 90px
			display block
			margin-top -10px
		
	
//!block inside end
//!block inside end