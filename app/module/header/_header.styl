//! block header
.header 
	padding 20px
	flex(between)
//.header__logo
.header-wraper
	z-index 2000
	background white 
.nav-wraper
	background red 
.header__slogan
	+below(1200px)
		display none
	width 200px
	color #192a3b
	font-size 24px
//.header__contact 
.header__contact-text
	text-align right
	font-size 24px
	color red
	margin-bottom -10px
	font-weight 400
.header-wraper
	height 155px
	position fixed
	width 100%
.header__contact-numb
	color black
	font-family  'Core Mellow Compressed';
	font-size 32px
	font-weight 400
.social
	+below(978px)
		display none
	f()
.social__el
	size 25 25
	round()
	border 1px solid black
	flex(mid)
	font-size 14px
	text-align center
	margin-right 2px
	i
		margin-top 2px
.header__basket-wrap
	flex(between)
.header__cost
	font-family 'Core Mellow Compressed'
	color black
	font-size 32px
	font-weight 400
	.rub
		font-size 18px
		margin-left -7px
.header__basket
	margin-left 15px
	@extend .btn--dark
	padding 10px 30px
.nav 
	f()
	height 55px
.nav__town-wrap
	flex(mid)
.nav__town
	+below(1200px)
		width 20%
	width 15%
	text-align center
	background red
	color white
	flex(mid)
	cp()
.nav__town-text
	+below(1200px)
		font-size 18px
	margin-right 15px
	font-size 24px
	font-weight 300
.triangle-bottom
	triangle: 'down' 7px white
.nav__menu 
	flex(between)
	width 70%
	background dark 
.nav__menu-el
	text-align center
	padding 15px 0
	flex-grow 1
	a
		+below(1200px)
			font-size 18px
		up()
		font-size 24px
		color white
		font-weight 300
		padding 3px 5px
		tr(all)
		&:hover
			color darken(white,60)
.nav__menu-el--active
	a
		border 1px solid white
		margin-right 2px
		
.nav__menu-enter 
	+below(1200px)
		font-size 18px
		width 20%
	width 15%
	text-align center
	background red
	color white
	font-size 24px
	font-weight 300
	flex(mid)
	cp()
//!block header end